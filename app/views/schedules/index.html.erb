<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Chemestry</th>
      <th>Subject</th>
      <th>Lecture hall</th>
      <th>Teacher</th>
      <th>Timeline</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.user_id %></td>
        <td><%= schedule.chemestry_id %></td>
        <td><%= schedule.subject_id %></td>
        <td><%= schedule.lecture_hall_id %></td>
        <td><%= schedule.teacher_id %></td>
        <td><%= schedule.timeline_id %></td>
        <td><%= schedule.date %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

